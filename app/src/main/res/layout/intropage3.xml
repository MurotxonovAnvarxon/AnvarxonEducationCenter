<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4E1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:textColor="#B3050505"
        android:textSize="25sp"
        android:elevation="4dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90sp"
        android:text="In this app you can \n track and manage student \n statistics" />




    <ImageView
        android:id="@+id/imageintro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/intro3"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_margin="30sp"
        android:text="Start"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>